generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Habit {
  id         String          @id @default(uuid())
  title      String
  created_at DateTime
  user_id    String
  dayHabits  DayHabit[]
  weekDays   HabitWeekDays[]
  user       User            @relation(fields: [user_id], references: [id])

  @@map("habits")
}

model HabitWeekDays {
  id       String @id @default(uuid())
  habit_id String
  week_day Int
  habit    Habit  @relation(fields: [habit_id], references: [id])

  @@unique([habit_id, week_day])
  @@map("habit_week_days")
}

model Day {
  id        String     @id @default(uuid())
  date      DateTime   @unique
  dayHabits DayHabit[]

  @@map("days")
}

model DayHabit {
  id       String @id @default(uuid())
  day_id   String
  habit_id String
  user_id  String
  day      Day    @relation(fields: [day_id], references: [id])
  habit    Habit  @relation(fields: [habit_id], references: [id])
  user     User   @relation(fields: [user_id], references: [id])

  @@unique([day_id, habit_id, user_id])
  @@map("day_habits")
}

model User {
  id        String     @id @default(uuid())
  name      String
  photo     String
  email     String
  dayHabits DayHabit[]
  Habit     Habit[]
}
